{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@interfaces/*": [
                "./interfaces/*"
            ],
            "@helpers/*": [
                "./helpers/*"
            ],
            "@constants/*": [
                "./constants/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@middlewares/*": [
                "./middlewares/*"
            ],
            "@routes/*": [
                "./routes/*"
            ],
        },
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "extends": "@tsconfig/recommended/tsconfig.json"
}